		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int[][] b = new int[a][a];
		int i=0,j=a/2,v = 1; //넣을값
//		b[0][a/2]=c++; //시작값 첫행 한가운데 두기
//		for (int i = a-1; i >=0 ; i--) { // 2 1 0 
