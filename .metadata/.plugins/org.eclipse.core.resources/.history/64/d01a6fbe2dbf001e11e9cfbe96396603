package test;

import java.util.Scanner;

public class MagicSQuare {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		 int count = 1;
		  int nowRow = 0;
		  int nowCol = n / 2;
		 
		  int[][] arr = new int[n][n];
		  arr[nowRow][nowCol] = count++;                                 //마지막 행의 가운데 열에 1을 할당


		  while ( count < n * n + 1 )                                          //매번 오른쪽 아래 칸을 검사한다
		 { 
		  if ( nowRow + 1 == n && nowCol + 1 < n )              //아래칸이 마방진 밖이면
		 {

		  nowRow = 0;                                            //오른쪽 맨 위칸으로 이동
		  nowCol++;
		  } 

		  else if ( nowRow + 1 < n && nowCol + 1 == n )       //오른쪽이 마방진 밖이면
		  {
		  nowRow++;                                             //맨 왼쪽 아래칸으로 이동
		  nowCol = 0;
		  } 

		  else if ( nowRow + 1 == n && nowCol + 1 == n )     //오른쪽 아래 칸이 마방진 밖이면
		  nowRow--;                                             //마지막 숫자 칸 바로 위로 이동
		  else

		 {
		  if ( arr[nowRow+1][nowCol+1] != 0 )           //오른쪽 아래 칸에 숫자가 있으면
		  nowRow--;                                     //마지막 숫자 칸 바로 위로 이동
		  else          
		 { 
		  nowRow++;                                     //오른쪽 아래 칸 비어있으면
		  nowCol++;                                      //숫자 넣기 
		  }
		  }

		  arr[nowRow][nowCol] = count++;

		
		
		
		

	}

}
